[font]

[font.bold]
family = "FiraCode Nerd Font Mono"

[font.bold_italic]
family = "FiraCode Nerd Font Mono"

[font.italic]
family = "FiraCode Nerd Font Mono"

[font.normal]
family = "FiraCode Nerd Font Mono"

[mouse]
hide_when_typing = true

[scrolling]
history = 10000
multiplier = 3

[window]
decorations = "none"
decorations_theme_variant = "Dark"
dynamic_padding = true
opacity = 0.8
title = "Alacritty"
padding = { x = 10, y = 10 }

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.dimensions]
columns = 100
lines = 30

[terminal]


[[keyboard.bindings]]
key = "F11"
action = "ToggleFullscreen"

[[keyboard.bindings]]
key = "F10"
action = "ToggleMaximized"

[[keyboard.bindings]]
key = "L"
mods = "Control"
chars = "clear\n"
