[general]
import = [
    "~/.config/alacritty/themes/themes/hyper.toml"
]

[window]
opacity = 0.8
padding.x = 0
padding.y = 0
decorations = "Full"
decorations_theme_variant = "Dark"

[font]
normal.family = "Hack"
bold.family = "Hack"
italic.family = "Hack"
bold_italic.family = "Hack"
size = 14.0

[terminal]

[terminal.shell]
program = "/usr/bin/tmux"
args = ["new-session", "-A", "-s", "main"]
